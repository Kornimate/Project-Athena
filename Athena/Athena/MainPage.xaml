<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Athena.MainPage"
             xmlns:vm="clr-namespace:Athena.ViewModels">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Fill"
            HorizontalOptions="Center">

            <Button
                Text="Flash Cards Mode" 
                SemanticProperties.Hint="Flash cards to learn the words and phrases"
                HorizontalOptions="Fill"
                Command="{Binding NavigateToFlashCards}"/>
            
            <Button
                Text="Read Words Mode" 
                SemanticProperties.Hint="Reads the words in multiple languages"
                HorizontalOptions="Fill"
                Command="{Binding NavigateToReadWords}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
