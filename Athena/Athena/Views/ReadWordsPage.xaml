<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Athena.Views.ReadWordsPage"
             Title="ReadWordsPage"
             xmlns:vm="clr-namespace:Athena.ViewModels">

    <ContentPage.BindingContext>
        <vm:ReadWordsViewModel />
    </ContentPage.BindingContext>

    <Grid 
        RowDefinitions="*,Auto"
        Padding="20">

        <VerticalStackLayout 
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="10">

            <Label Text="{Binding GreekInGreek}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

            <Label Text="{Binding GreekInLatin}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

            <Label Text="{Binding EnglishTranslation}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

        </VerticalStackLayout>
        <Button Grid.Row="1"
            Text="Finish"
            SemanticProperties.Hint="Go to main menu"
            HorizontalOptions="Fill"
            Command="{Binding NavigateToMainMenu}" />
    </Grid>
</ContentPage>